<div class="container-fluid">
    <div class="row">

            {{#each books}}

                <form method="POST" action="/book" class="form__submit col booksDiv" name="form">
                    <input type="hidden" name="bookID" value={{this.id}}>

                    
                        <div onclick="this.parentNode.submit()">
                            {{{this.url}}}
                        </div>

                        <p>{{this.title}}</p>
                        <p>{{this.year}}</p>
                    
                </form>

            
            {{/each}}

        </div>
    </div>
</div>
